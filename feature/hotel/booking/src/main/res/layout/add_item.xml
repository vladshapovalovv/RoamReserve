<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/card_elevation"
    style="@style/Widget.Material3.CardView.Filled"
    android:backgroundTint="@color/white"
    android:layout_marginTop="@dimen/margin_small"
    app:cardCornerRadius="@dimen/backgroundCardRadius">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:textAppearance="@style/HeadlineTextAppearance"
            android:text="@string/add_tourist"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/addTouristButton"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/add_backround">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_add"
                android:layout_height="match_parent">
            </ImageView>
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>